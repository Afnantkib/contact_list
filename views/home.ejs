<html>

<head>
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/57a1c203e5.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">


</head>

<body>
    <h1 id="header"> <i class="fas fa-address-book"></i> Contact List</h1>

    <div id="list">
        <ul>
            <% for(let i of contacts_list){%>
                   <li>
                    <p>
                        <%= i.name %>
                    </p>
                    <p>
                        <%= i.phone %>
                    </p>
               
                    <div id="delete"><a href="/delete-contact?id=<%= i._id %>"><i class="fas fa-trash-alt"></i></a></div>
                </li>
              
                <%} %>
        </ul>
    
    
    <form action="/create-contact" method="post">
        <input type="text" name="name" id="name" placeholder="Enter your name" required>
        <input type="number" name="phone" id="phone" placeholder="Enter phone" required> <br>    
    <div id="button">    <button  type="submit">Add Contact</button> </div>




    </form></div>
</body>
<script src="/js/home.js"></script>

</html>